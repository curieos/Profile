<% content_for :title do %>
Blog - Curieos
<% end %>

<% content_for :content do %>
<div class="card">
    <div class="card-header text-center">
        <h2>Blog</h2>
    </div>
    <div class="card-body d-flex">
        <% @posts.each do |post| %>
            <%= link_to post_path(post), class: "col-lg-4 col-md-6 col text-reset text-decoration-none" do %>
                <div class="card">
                    <div class="card-header text-center text-decoration-none">
                        <%= post.title %>
                    </div>
                    <%= image_tag post.image_url, class: "card-img" %>
                </div>
            <% end %>
        <% end %>
    </div>
</div>
<% end %>